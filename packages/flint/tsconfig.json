{
  "extends": "../typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": true,
    "tsBuildInfoFile": "./dist/tsconfig.buildinfo",
    "noEmit": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["vitest/globals", "@types/node"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts"]
}