{
  "name": "@outfitter/rightdown",
  "version": "2.0.0",
  "description": "Unified Markdown formatter orchestrating code block formatting tools",
  "keywords": [
    "markdown",
    "linting",
    "formatting",
    "documentation",
    "markdownlint",
    "md",
    "rightdown"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "rightdown": "./dist/cli.js"
  },
  "files": [
    "dist",
    "configs"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@outfitter/contracts": "workspace:*",
    "js-yaml": "^4.1.0",
    "markdownlint-cli2": "^0.15.0",
    "remark": "^15.0.1",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "yargs": "^18.0.0"
  },
  "peerDependencies": {
    "@biomejs/biome": "^2.0.0",
    "prettier": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "@biomejs/biome": {
      "optional": true
    },
    "prettier": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@outfitter/typescript-config": "workspace:*",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.7.4",
    "@types/yargs": "^17.0.33",
    "markdownlint": "^0.34.0",
    "prettier": "^3.5.3",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/outfitter-dev/monorepo.git",
    "directory": "packages/rightdown"
  },
  "bugs": {
    "url": "https://github.com/outfitter-dev/monorepo/issues"
  },
  "homepage": "https://github.com/outfitter-dev/monorepo#readme",
  "publishConfig": {
    "access": "public"
  }
}
